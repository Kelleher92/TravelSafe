<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swiperefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ian.travelsafe.FragmentParentHomeChildren">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_register_new_child"
        tools:context="com.example.ian.travelsafe.FragmentParentHomeChildren">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.example.ian.travelsafe.FragmentParentHomeChildren"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:id="@+id/relativeLayout1">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/person_photo"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/child_placeholder"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="16dp"
                        android:contentDescription="ChildPicture" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/person_name"
                        android:text="Tom Moran"
                        android:layout_toRightOf="@+id/person_photo"
                        android:layout_alignParentTop="true"
                        android:textSize="30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/person_age"
                        android:text="School Route 1"
                        android:layout_toRightOf="@+id/person_photo"
                        android:layout_below="@+id/person_name" />

                </RelativeLayout>


            </android.support.v7.widget.CardView>

            <Space
                android:layout_width="20px"
                android:layout_height="20px" />

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:id="@+id/relativeLayout2">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/person_photo2"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/child_placeholder"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="16dp"
                        android:contentDescription="ChildPicture" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/person_name2"
                        android:text="Tom Moran"
                        android:layout_toRightOf="@+id/person_photo2"
                        android:layout_alignParentTop="true"
                        android:textSize="30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/person_age2"
                        android:text="School Route 1"
                        android:layout_toRightOf="@+id/person_photo2"
                        android:layout_below="@+id/person_name2" />

                </RelativeLayout>


            </android.support.v7.widget.CardView>


        </LinearLayout>

    </RelativeLayout>

</android.support.v4.widget.SwipeRefreshLayout>