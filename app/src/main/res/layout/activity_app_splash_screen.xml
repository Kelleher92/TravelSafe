<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ian.travelsafe.AppSplashScreen"
    android:background="@color/travelSafeBlue">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:gravity="center_vertical|center_horizontal">

        <ImageView
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:text="New Text"
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.10" />

        <Space
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:maxWidth="20dp"
                android:maxHeight="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/child_walk_white"
                android:id="@+id/imageView" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:maxWidth="20dp"
                android:maxHeight="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/child_dance_white"
                android:id="@+id/imageView2" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:maxWidth="20dp"
                android:maxHeight="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/child_somersault_white"
                android:id="@+id/imageView3" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:maxWidth="20dp"
                android:maxHeight="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/child_jump_white"
                android:id="@+id/imageView4" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:maxWidth="20dp"
                android:maxHeight="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/child_run"
                android:id="@+id/imageView5" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:maxWidth="20dp"
                android:maxHeight="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/child_cycle_white"
                android:id="@+id/imageView6" />

        </LinearLayout>

        <View android:id="@+id/separator"
            android:background="#ffffff"
            android:layout_width = "fill_parent"
            android:layout_height="1dip"
            android:layout_centerVertical ="true"
            android:layout_alignParentTop="true"/>

    </LinearLayout>
</RelativeLayout>
